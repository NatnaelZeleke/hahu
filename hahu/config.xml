<?xml version='1.0' encoding='utf-8'?>
<widget id="com.habeshatech.hahu" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Hahu</name>
  <description>
    A sample Apache Cordova application that responds to the deviceready event.
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
    Apache Cordova Team
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <plugin name="cordova-plugin-camera" spec="~2.1.1">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="App want to access your camera"/>
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="App want to access your camera to upload images"/>
  </plugin>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <allow-intent href="file:*"/>
  <allow-intent href="res:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon qualifier="mdpi" src="res/icon/hahu-logo.png"/>
    <icon qualifier="hdpi" src="res/icon/hahu-logo.png"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>
